function getMiddle(s) {
    var wordLength = s.length;
    var middleChars;
    if (wordLength % 2) {
        middleChars = s.charAt((wordLength / 2));
    } else {
        middleChars = s.substr((wordLength / 2 - 1), 2);
    }
    return middleChars;
}
